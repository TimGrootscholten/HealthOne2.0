{% extends 'default.html.twig' %}

{% block title %} HealthOne - Medicijnen index{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        input, textarea{
            width: 100%;
            border: 1px solid #868686;
            border-radius: 5px;
            height: 2.5rem;
        }
        input[type=checkbox] {
            display: flex;
            align-items: flex-start;
            margin-bottom: 1em;
            border-radius: 50%;
        }
        select{
            width: 100%;
            height: 2rem;
            border: 1px solid #868686;
            border-radius: 5px;
        }

    </style>

{%  endblock %}
{% block menu %}
    <li class="nav-item"><a class="nav-link" href="{{ path('homePage') }}">Home</a></li>
    <li class="nav-item"><a class="nav-link" href="{{ path('medicijn') }}">Medicijnen</a></li>
    <li class="nav-item active"><a class="nav-link" href="{{ path('recept') }}">Recepten</a></li>
    <li class="nav-item"><a class="nav-link" href="{{ path('contact') }}">contact</a></li>
{% endblock %}

{% block content %}
    <h3>Recept {{ recept.medicijnen.naam }}</h3>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{  form_widget(form) }}
    <button type="submit" class="btn btn-primary">Bijwerken</button>
    {{ form_end(form) }}
{% endblock %}